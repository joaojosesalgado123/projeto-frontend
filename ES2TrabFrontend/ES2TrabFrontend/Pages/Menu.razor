@page "/menu"
@inject NavigationManager NavigationManager

<h3>Menu Principal</h3>

<div class="menu">
    <div class="menu-item" @onclick="OnClickAção1">Ação 1</div>
    <div class="menu-item" @onclick="OnClickAção2">Ação 2</div>
    <div class="menu-item" @onclick="OnClickAção3">Ação 3</div>
    <div class="menu-item" @onclick="OnClickAção4">Ação 4</div>
    <button class="btn btn-danger" @onclick="Logout">Sair</button>
</div>

@code {
    private void OnClickAção1() => ExecuteAction("Ação 1");
    private void OnClickAção2() => ExecuteAction("Ação 2");
    private void OnClickAção3() => ExecuteAction("Ação 3");
    private void OnClickAção4() => ExecuteAction("Ação 4");

    private void ExecuteAction(string action)
    {
        Console.WriteLine($"Executando: {action}");
    }

    private void Logout()
    {
        Console.WriteLine("Logout efetuado!");
        NavigationManager.NavigateTo("/login");
    }
}